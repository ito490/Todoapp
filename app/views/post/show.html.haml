.main.posts-show
  .container
    .posts-show-item
      .post-user-name
        %img{:src => "/user_images/#{@user.image_name}"}/
        = link_to(@user.name, "/users/#{@user.id}")
      %p
        = @post.content
      .post-time
        = @post.created_at
      - if @post.user_id == @current_user.id
        .post-menus
          = link_to("編集", "/post/#{@post.id}/edit")
          = link_to("削除", "/post/#{@post.id}/destroy",{method:"post"})